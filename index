<script>
const eligibleBox = document.getElementById('eligible-box-rewards');
const btn = document.getElementById('shein-btn-rewards');

/* ===============================
   üîí STICKY 60 / 40 BUCKET
================================ */
let bucket = localStorage.getItem("shein_bucket_v2");

if (!bucket) {
  bucket = Math.random() < 0.60 ? "60" : "40";
  localStorage.setItem("shein_bucket_v2", bucket);
}

const is60 = bucket === "60";

/* ===============================
   üîó LINKS
================================ */
const affId = is60 ? "16188" : "15802";

const linkUS = `https://glctrk.org/aff_c?offer_id=3091&aff_id=${affId}`;
const linkCA = `https://glctrk.org/aff_c?offer_id=3105&aff_id=${affId}`;
const linkGB = linkCA;
const linkAU = linkCA;

const linkRest = is60
  ? "https://rewardorbit.com/r/eyJ0Ijoic2hlaW4iLCJ1IjoiNjgyYjcxZjQxNmM0OTJmNjg5MDU2NTAyIiwiYSI6Ijc1MCIsInRzIjoxNzU3MDg2ODE4MDE2fQ?amount=750"
  : "https://rewardorbit.com/r/eyJ0Ijoic2hlaW4iLCJ1IjoiNjdkNTliZmEzNjlmZTUyYjM5YTAwOTdmIiwiYSI6Ijc1MCIsInRzIjoxNzU3MTAyMzU2MzczfQ?amount=750";

/* ===============================
   üåç HELPERS
================================ */
function flag(cc){
  if(!cc || cc.length !== 2) return "";
  return String.fromCodePoint(...[...cc.toUpperCase()].map(c => 127397 + c.charCodeAt()));
}

function setEligible(cc, cn){
  eligibleBox.textContent = `‚úÖ You are eligible ‚Äì ${cn} ${flag(cc)}`;

  if (cc === "US") btn.href = linkUS;
  else if (cc === "CA") btn.href = linkCA;
  else if (cc === "GB") btn.href = linkGB;
  else if (cc === "AU") btn.href = linkAU;
  else btn.href = linkRest;
}

/* ===============================
   üì° GEO
================================ */
fetch('https://ipapi.co/json/')
.then(r => r.ok ? r.json() : Promise.reject())
.then(d => {
  if (d?.country && d?.country_name) {
    setEligible(d.country, d.country_name);
  } else throw 0;
})
.catch(() => {
  fetch('https://ipwho.is/')
  .then(r => r.ok ? r.json() : Promise.reject())
  .then(d => {
    if (d && d.success !== false) {
      setEligible(d.country_code, d.country);
    } else throw 0;
  })
  .catch(() => {
    eligibleBox.textContent = "‚úÖ You are eligible üåç";
    btn.href = linkRest;
  });
});
</script>

